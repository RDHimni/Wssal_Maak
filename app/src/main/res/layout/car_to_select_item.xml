<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/_50sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iconCarInCarSelectItem"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:elevation="2dp"
        app:layout_constraintVertical_bias=".05"
        app:layout_constraintHorizontal_bias=".05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_car" />

    <TextView
        android:id="@+id/modelCarTvInCarSelectItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DACIA DOKKER"
        android:textColor="@color/blue_700"
        app:layout_constraintHorizontal_bias=".05"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/iconCarInCarSelectItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconCarInCarSelectItem"
        app:layout_constraintTop_toTopOf="@+id/iconCarInCarSelectItem" />

    <TextView
        android:id="@+id/TypeCarTvInCarSelectItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voiture W"
        app:layout_constraintVertical_bias=".01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/modelCarTvInCarSelectItem"
        app:layout_constraintStart_toStartOf="@+id/modelCarTvInCarSelectItem"
        app:layout_constraintTop_toBottomOf="@+id/modelCarTvInCarSelectItem" />

    <ImageView
        android:id="@+id/SelectIconInCarItem"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:visibility="invisible"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".9"
        app:layout_constraintStart_toEndOf="@+id/modelCarTvInCarSelectItem"
        app:layout_constraintTop_toTopOf="@+id/iconCarInCarSelectItem"
        app:srcCompat="@drawable/ic_valide_gray" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/yellow_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        />


</androidx.constraintlayout.widget.ConstraintLayout>