<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg1"
        tools:context=".ui.codeotp.CodeOTPRdFragment">


        <LinearLayout
            android:id="@+id/codeOtpLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintVertical_bias=".7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/inputOtp1"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/button_bg_slected"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputOtp2"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/button_bg_slected"
                android:gravity="center"
                android:inputType="number"

                android:maxLength="1"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputOtp3"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/button_bg_slected"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="number"

                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputOtp4"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/button_bg_slected"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="number"

                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputOtp5"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/button_bg_slected"
                android:gravity="center"
                android:inputType="number"

                android:maxLength="1"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputOtp6"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/button_bg_slected"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />


        </LinearLayout>


        <Button
            android:id="@+id/VerifyBtn"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:background="@drawable/button_bg_slected"
            android:text="@string/v_rifiez_btn"
            android:textAllCaps="false"
            android:textColor="@color/yellow_200"
            app:layout_constraintVertical_bias=".2"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/codeOtpLinearLayout" />

        <TextView
            android:id="@+id/ResendCodetextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/renvoyer_le_code_tv"
            android:textColor="#D80202"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/VerifyBtn"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/VerifyBtn"
            app:layout_constraintTop_toBottomOf="@+id/VerifyBtn"
            app:layout_constraintVertical_bias=".2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>