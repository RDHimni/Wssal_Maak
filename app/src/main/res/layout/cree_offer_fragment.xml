<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ceeroffer.CreeOfferFragment">

        <ImageView
            android:id="@+id/GoBackIconInCreerOfferFrag"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_back"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".05" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/GoBackIconInCreerOfferFrag">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <TextView
                    android:id="@+id/dateDepartTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="date de départ"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintVertical_bias=".2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <Button
                    android:id="@+id/dateDepartBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/materialButtonOutlinedStyle"

                    android:text="10 mai 2021"
                    android:textAllCaps="false"
                    android:textColor="#737373"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/dateDepartTv"
                    app:layout_constraintTop_toBottomOf="@+id/dateDepartTv" />


                <TextView
                    android:id="@+id/HourDepartTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="heure de départ"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintHorizontal_bias=".9"
                    app:layout_constraintBottom_toBottomOf="@+id/dateDepartTv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dateDepartTv"
                    app:layout_constraintTop_toTopOf="@+id/dateDepartTv"
                    app:layout_constraintVertical_bias="0" />

                <Button
                    android:id="@+id/heureDepartBtn"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="10h : 20min"
                    android:textAllCaps="false"
                    android:textColor="#737373"
                    app:layout_constraintBottom_toBottomOf="@+id/dateDepartBtn"
                    app:layout_constraintEnd_toEndOf="@+id/HourDepartTv"
                    app:layout_constraintStart_toStartOf="@+id/HourDepartTv"
                    app:layout_constraintTop_toTopOf="@+id/dateDepartBtn" />


                <View
                    android:id="@+id/view0"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="1dp"
                    android:background="@color/yellow_200"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateDepartBtn"
                    app:layout_constraintVertical_bias="0.05" />

                <TextView
                    android:id="@+id/dateArriveTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="date d'arivée"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view0"
                    app:layout_constraintVertical_bias="0.05" />

                <Button
                    android:id="@+id/dateArriveBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/materialButtonOutlinedStyle"

                    android:text="10 mai 2021"
                    android:textAllCaps="false"
                    android:textColor="#737373"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/dateArriveTv"
                    app:layout_constraintTop_toBottomOf="@+id/dateArriveTv" />


                <TextView
                    android:id="@+id/HourArriveTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="heure d'arivée"
                    android:textSize="@dimen/_14sdp"
                    app:layout_constraintHorizontal_bias=".9"
                    app:layout_constraintBottom_toBottomOf="@+id/dateArriveTv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dateArriveTv"
                    app:layout_constraintTop_toTopOf="@+id/dateArriveTv"
                    app:layout_constraintVertical_bias="0" />

                <Button
                    android:id="@+id/heureArriveBtn"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="10h : 20min"
                    android:textAllCaps="false"
                    android:textColor="#737373"
                    app:layout_constraintBottom_toBottomOf="@+id/dateArriveBtn"
                    app:layout_constraintEnd_toEndOf="@+id/HourArriveTv"
                    app:layout_constraintStart_toStartOf="@+id/HourArriveTv"
                    app:layout_constraintTop_toTopOf="@+id/dateArriveBtn" />


                <Button
                    android:id="@+id/SuivantBtnIncreeOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:text="@string/suivant"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dateArriveBtn" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>