<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WssalMaak" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_800</item>
        <item name="colorOnPrimary">@color/black</item>




        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_800</item>
        <!-- Customize your theme here. -->


        <!--item name="android:windowTranslucentStatus">true</item-->
        <!--item name="android:windowTranslucentNavigation">true</item-->

        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>

     <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>

    </style>

    <style name="Theme.WssalMaak.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_800</item>
        <item name="colorOnPrimary">@color/yellow_200</item>



        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_800</item>
        <!-- Customize your theme here. -->

        <!--item name="android:windowTranslucentStatus">true</item-->
        <!--item name="android:windowTranslucentNavigation">true</item-->

        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>